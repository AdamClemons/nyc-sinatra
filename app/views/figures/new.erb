<h1>Create Figure</h1>
<form action="/figures" method="POST">
    <p>Name: <input type="text" name="figure[name]"></p>
    <br>
    <h2>Titles</h2>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.id %>"><%= title.name %></input></br>
    <% end %>
    <br>
    <p>Create New Title: <input type="text" name="title[name]"></p>

    <h2>Landmarks</h2>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>"><%= title.name %></input></br>
    <% end %>
    <br>
    <p>Create New Landmark:</p>
    Name: <input type="text" name="landmark[name]"><br>
    Year: <input type="text" name="landmark[year]"><br>

    <input type="submit" value="Create New Figure">

</form>